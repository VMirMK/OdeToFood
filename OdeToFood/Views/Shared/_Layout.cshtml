<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*@Script("jquery-1.5.1.min.js")*@
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <img alt="dsf" src="../../Content/images/grd_head.png" />
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Restaurant", "Index", "Restaurant")</li>
                    <li>@Html.ActionLink("Reviews", "Index", "Reviews")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        @*<div id="footer">
        @Html.Action("BestReview", "Reviews")
        @RenderSection("footer", false)
        </div>*@
    </div>
    @Content.Script("jquery-1.5.1.min.js",Url)
    @Content.Script("jquery.unobtrusive-ajax.min.js", Url)
    @RenderSection("scripts", false)
</body>
</html>

